@model IEnumerable<Caro.Models.Blog>

@{
    Layout = "_DashLayout";
}


<table class="table" style="padding:20px; margin-top:100px;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                    <img src="@item.Image"  class="img-thumbnail mr-2" style="width: 50px; height: 50px;" />
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
        </tr>
}
    </tbody>
</table>
<a asp-action="Create" class="btn btn-primary">Create New</a>

